{
    "manifest_version": 2,
    "name": "Google Container",
    "version": "0.9.1",

    "description": "Google Container isolates your Google activity from the rest of your web activity in order to prevent Google from tracking you outside of Google websites via third party cookies.",

    "icons": {
        "48": "icon.png",
        "96": "icon@2x.png"
    },

    "applications": {
      "gecko": {
        "id": "@contain-google",
        "strict_min_version": "57.0"
      }
    },

    "homepage_url": "https://github.com/mkjeldsen/contain-google",

    "permissions": [
        "<all_urls>",
        "browsingData",
        "contextualIdentities",
        "cookies",
        "management",
        "storage",
        "tabs",
        "webRequestBlocking",
        "webRequest"
    ],

    "background": {
        "scripts": ["background.js"]
    }
}
